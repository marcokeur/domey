{
	"id": "com.milight",
	"version": "1.0",
	"name": {
		"en": "MiLight"
	},
	"description": {
		"en": "Control your MiLights"
	},
	"author": {
		"name": "Marco Keur",
		"website": "http://github.com/marcokeur"
	},
	"dependencies": {
		"node-milight-promise": "*"
	},
    "drivers": [
		{
			"id": "bulb",
			"name": {
				"en": "Milight Bulb",
				"nl": "Milight Lamp"
			},
            "class": "light",
            "capabilities": [ "enabled", "disabled", "brightness", "hue" ]
		}
	],
    "flow": {
        "actions": [
            {
                "method": "enable",
                "title" : {
                    "en" : "turn light on",
                    "nl" : "zet lamp aan"
                },
                "args": [
                    {
                        "name": "bulb",
                        "type": "device",
                        "placeholder":{
                            "en" : "Find a bulb...",
                            "nl" : "Vind een lamp..."
                        },
                        "filter": {
                            "driverid" : "bulb"
                        }
                    }                        
                ]
            },
            {
                "method": "disable",
                "title" : {
                    "en" : "turn light off",
                    "nl" : "zet lamp uit"
                },
                "args": [
                    {
                        "name": "bulb",
                        "type": "device",
                        "placeholder":{
                            "en" : "Find a bulb...",
                            "nl" : "Vind een lamp..."
                        },
                        "filter": {
                            "driverid" : "bulb"
                        }
                    }                        
                ]
            }
        ],
        "conditions": [
            {
                "method": "enabled",
                "title" : {
                    "en" : "light is turned on",
                    "nl" : "lamp is aan"
                },
                "args" : [
                    {
                        "name": "bulb",
                        "type": "device",
                        "placeholder":{
                            "en" : "Find a bulb...",
                            "nl" : "Vind een lamp..."
                        },
                        "filter": {
                            "driverid" : "bulb"
                        }
                    }                        
                ]
            },
            {
                "method": "disabled",
                "title" : {
                    "en" : "light is turned off",
                    "nl" : "lamp is uit"
                },
                "args" : [
                    {
                        "name": "bulb",
                        "type": "device",
                        "placeholder":{
                            "en" : "Find a bulb...",
                            "nl" : "Vind een lamp..."
                        },
                        "filter": {
                            "driverid" : "bulb"
                        }
                    }                        
                ]
            }
        ]
    }
}