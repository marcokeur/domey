{
	"id": "com.apple.airplay",
	"version": "1.0",
	"name": {
		"en": "AirPlay"
	},
	"description": {
		"en": "Stream to airplay speakers"
	},
	"author": {
		"name": "Marco Keur",
		"website": "http://github.com/marcokeur"
	},
	"dependencies": {
		"dgram": "*"
	},
    "drivers": [
		{
			"id": "airplay",
			"name": {
				"en": "AirPlay Speaker",
				"nl": "AirPlay Speaker"
			},
            "class": "speaker",
            "capabilities": [ "onoff" ]
		}
	],
    "flow": {
        "actions": [
            {
                "method": "play",
                "title" : {
                    "en" : "play a song",
                    "nl" : "speel muziek"
                },
                "args": [
                    {
                        "name": "airplay",
                        "type": "device",
                        "placeholder":{
                            "en" : "Find a speaker...",
                            "nl" : "Vind een luidspreker..."
                        },
                        "filter": {
                            "driverid" : "airplay"
                        }
                    }                        
                ]
            },
            {
                "method": "stop",
                "title" : {
                    "en" : "stop playing",
                    "nl" : "stop met afspelen"
                },
                "args": [
                    {
                        "name": "airplay",
                        "type": "device",
                        "placeholder":{
                            "en" : "Find a speaker...",
                            "nl" : "Vind een luidspreker..."
                        },
                        "filter": {
                            "driverid" : "airplay"
                        }
                    }
                ]
            }
        ]
    }
}