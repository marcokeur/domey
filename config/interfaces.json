{
    "interfaces": {
        "jeelink_868": {
            "port": "/dev/ttyUSB1"
        },
        "rpi_gpio": {
            "pins": [
                { 
                    "number": 7,
                    "direction": "input"
                },
                {
                    "number": 8,
                    "direction": "output"
                }
            ]
        },
        "mqtt_server": {
            "port": 1883,
            "mongo" : {
                "url" : "mongodb://localhost:27017/mqtt",
                "collection" : "domey_mqtt"
            }
        }
    }
}