extends frame

block wrapper
    .container
        .row
            .col-md-4.col-md-offset-4
              .login-panel.panel.panel-default
                .panel-heading
                  h3.panel-title Please Sign In
                |                     
                .panel-body
                    if message && message.length
                        strong #{message}
                    form(role='form', action='/login', method='post')
                        fieldset
                          .form-group
                            input.form-control(placeholder='E-mail', name='username', type='text', autofocus='')
                          |                                 
                          .form-group
                            input.form-control(placeholder='Password', name='password', type='password', value='')
                          |                                 
                          .checkbox
                            label
                              input(name='remember_me', type='checkbox', value='Remember Me')
                              | Remember Me
                          // Change this to a button or input when using this as a form
                          input.btn.btn-lg.btn-success.btn-block(type='submit', value='Login')